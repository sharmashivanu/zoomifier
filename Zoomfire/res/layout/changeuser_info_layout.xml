<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/signin_background" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_header" >

        <Button
            android:id="@+id/save_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/save_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="User Info"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/cancel_button" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/fist_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Name"
                android:textColor="#4c566c" />

            <EditText
                android:id="@+id/firt_name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fist_name_textview"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                 android:singleLine="true"
                android:layout_marginTop="5dp"
                android:inputType="textCapSentences"
                android:background="@drawable/upper_eidt"
                android:hint="First Name"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/last_name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firt_name_field"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                   android:singleLine="true"
                android:background="@drawable/lower_edit"
                android:inputType="textCapSentences"
                android:hint="Last Name"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/email_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/last_name_field"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Email"
               android:textColor="#4c566c" />

            <TextView
                android:id="@+id/email_name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_name_textview"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/email_strip"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/password_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/email_name_field"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Password"
                android:textColor="#4c566c" />

            <EditText
                android:id="@+id/current_password_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_name_textview"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPassword"
                android:background="@drawable/upper_eidt"
                android:singleLine="true"
                android:hint="Current Password"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/new_password_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_password_fields"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                 android:inputType="textPassword"
                 android:singleLine="true"
                android:background="@drawable/mid_edit"
                android:hint="New Password"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/verify_password_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_password_fields"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-2dp"
                 android:inputType="textPassword"
                   android:singleLine="true"
                android:background="@drawable/lower_edit"
                android:hint="Verify New Password"
                android:paddingLeft="5dp" />

            <RelativeLayout
                android:id="@+id/button_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verify_password_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                  
                android:layout_marginTop="20dp"
                android:visibility="gone" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true" >

                    <Button
                        android:id="@+id/save_button"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_background"
                        android:text="Save"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/save_button"
                        android:background="@drawable/button_background"
                        android:text="Cancel"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>